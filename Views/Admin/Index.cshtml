@using MngVm.Models;
@model User
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Admin | User List";
}

<div class="alert customalert" id="success-alert">
    @*<button type="button" class="close" data-dismiss="alert">x</button>*@
    <strong id="message"></strong>
</div>


<div class="col-sm-12" style="margin-top:20px">
    <div class="col-sm-offset-3 col-sm-6 col-xs-12">
        <div class="panel-group" id="accordion">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <a data-toggle="collapse" data-parent="#accordion" href="#collapse1">
                        <h4 class="panel-title text-center">
                            Add New User
                        </h4>
                    </a>
                </div>
                <div id="collapse1" class="panel-collapse collapse">
                    <div class="panel-body">
                        <form class="form-horizontal" id="frmUser">

                            <div class="form-group">
                                <label class="control-label col-sm-4" for="email">Organization Unit:</label>
                                <div class="col-sm-8">
                                    @Html.DropDownListFor(m => m.Ou, (SelectList)ViewBag.OuList, "Please select", new { @class = "form-control required" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-sm-4" for="email">First Name:</label>
                                <div class="col-sm-8">
                                    @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control required", maxlength = "50", placeholder = "First Name" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-sm-4" for="email">Last Name:</label>
                                <div class="col-sm-8">
                                    @Html.TextBoxFor(m => m.LastName, new { @class = "form-control required", maxlength = "50", placeholder = "Last Name" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-sm-4" for="email">Logon Name:</label>
                                <div class="col-sm-8">
                                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control required", maxlength = "50", placeholder = "Logon Name / Username" })
                                    @Html.DropDownListFor(m => m.UPNSuffix, (SelectList)ViewBag.Upn, "Please Select", new { @class = "form-control required" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-sm-4" for="email">Hostpool Name:</label>
                                <div class="col-sm-8">
                                    @Html.DropDownListFor(m => m.HostPoolName, (SelectList)ViewBag.HostpoolList, "Please select", new { @class = "form-control required" })
                                    <div id="messageSection" hidden="hidden">
                                        <ul class="list-group" id="vmlist" style="margin: 0;"></ul>
                                    </div>
                                </div>
                            </div>

                            @*<div class="form-group">
                                    <label class="control-label col-sm-4" for="email">Hostpool Name:</label>
                                    <div class="col-sm-8">
                                        @Html.DropDownListFor(m => m.VmName, (SelectList)ViewBag.HostpoolList, "Please select", new { @class = "form-control required" })
                                    </div>
                                </div>*@

                            <div class="form-group">
                                <label class="control-label col-sm-4" for="pwd">Password:</label>
                                <div class="col-sm-8">
                                    @Html.TextBoxFor(m => m.Password, new { @class = "form-control required", type = "password", maxlength = "20", placeholder = "Enter password" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-sm-4" for="pwd">Confirm Password:</label>
                                <div class="col-sm-8">
                                    <input type="password" name="confPassword" required class="form-control required" maxlength="20" id="confPassword" placeholder="Confirm password">
                                </div>
                            </div>

                            <div class="panel-footer text-center">
                                <button type="button" id="btnSubmit" class="btn btn-info">Submit</button>
                            </div>
                        </form>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

<div id="userist" class="col-sm-12">
    @Html.Action("List")
</div>
