@using MngVm.Models;
@model List<User>
@{
    int count = 1;
}

@if (Model != null)
{
    <div class="panel panel-primary">
        <div class="panel-heading text-center"><span>List Of Users</span></div>
        <div class="panel-body">
            <div class="col-lg-12">
                <table class="table table-striped table-hover">
                    <thead class="thead-dark">
                        <tr>
                            <th>#</th>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>User Name</th>
                            <th>OU</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>@(count++)</td>
                                <td>@user.FirstName</td>
                                <td>@user.LastName</td>
                                <td>@user.UserName</td>
                                <td>@user.Ou</td>
                                <td>
                                    <button title="Change Password" data-toggle="tooltip" data-placement="top" username=@user.UserName class="btn"><i class="fa fa-lock"></i></button>
                                    <button title="Delete User" data-toggle="tooltip" data-placement="top" username=@user.UserName class="btn btnDelete"><i class="fa fa-trash"></i></button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            @*<div class="col-sm-6 col-lg-offset-3">
                    <h2>List Of Users</h2>
                    @foreach (var item in Model.GroupBy(a => a.Ou))
                    {
